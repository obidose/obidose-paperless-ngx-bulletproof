# IDs and timezone
PUID=1001
PGID=1001
TZ=Etc/UTC

# Instance & paths (installer may change)
INSTANCE_NAME=paperless
DATA_ROOT=/home/docker/paperless
STACK_DIR=/home/docker/paperless-setup

# Exposure (choose either Traefik or direct port)
ENABLE_TRAEFIK=yes
DOMAIN=paperless.example.com
LETSENCRYPT_EMAIL=admin@example.com
HTTP_PORT=8000

# Paperless admin (installer can set)
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=changeme

# Postgres
POSTGRES_VERSION=15
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=changeme

# Backups (rclone)
RCLONE_REMOTE_NAME=pcloud
RCLONE_REMOTE_PATH=backups/paperless/paperless
KEEP_FULLS=3
KEEP_INCS=7
CRON_FULL_TIME=30 3 * * 0
CRON_INCR_TIME=0 0 * * *
CRON_ARCHIVE_TIME=

# .env snapshot behavior in backups
#   none   = do not include .env
#   plain  = include as env.snapshot (plaintext)
#   openssl = include as env.snapshot.enc (AES-256-CBC, -pbkdf2)
ENV_BACKUP_MODE=openssl
ENV_BACKUP_PASSPHRASE_FILE=/root/.paperless_env_pass
INCLUDE_COMPOSE_IN_BACKUP=yes
